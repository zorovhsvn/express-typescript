{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "public/*"
            ]
        },
        "typeRoots": ["./node_modules/@types", "./src/typings"]
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "transpileOnly": true,
    },
}